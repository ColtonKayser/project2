<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <h1>Edit Game</h1>
    <form action="/app/<%=game.id%>?_method=PUT" method="POST">
        Name: <input type="text" name="name" value="<%=game.name%>" /><br/>
        Console: <input type="text" name="console" value="<%=game.console%>"/><br/>
        Year: <input type="text" name="year" value="<%=game.year%>"/><br/>
        Image URL: <input type="text" name="img" value="<%=game.img%>"><br />
        Notes: <textarea name="notes" rows="8" cols="80"><%=game.notes%></textarea><br/>
        <h3>Genres</h3>
        <!-- Checkbox for Action -->
        <label>
          <input type="checkbox" name="action"
          <% if (game.action === true) { %>
            checked
          <% } %> />
          <span>Action</span>
        </label>
        <br/>
        <!-- Checkbox for Puzzle -->
        <label>
          <input type="checkbox" name="puzzle"
          <% if (game.puzzle === true) { %>
            checked
            <% } %>/>
            <span>Puzzle</span>
        </label>
        <br />
        <!-- Checbox for RPG -->
        <label>
          <input type="checkbox" name="rpg"
          <% if (game.rpg === true) { %>
          checked
          <% } %>/>
          <span>RPG</span>
        </label>
        <br />
        <!-- Checkbox for Sports -->
        <label>
          <input type="checkbox" name="sports"
          <% if (game.sports === true) { %>
            checked
          <% } %>/>
          <span>Sports</span>
          <br />
        <input type="submit" name="" value="Submit Changes">
    </form>
  </body>
</html>
