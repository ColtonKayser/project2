<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <nav><a href="/app/new">Add Game</a></nav>
    <form action="/sessions?_method=DELETE" method="POST">
      <input type="submit" name="" value="Log Out">
    </form>
    <h1>8-bit Backlog</h1>
    <div class="row">
    <% for (let i = 0; i < games.length; i++) { %>

      <div class="col s12 m7">
        <div class="card">
          <div class="card-image">
            <img src="<%=games[i].img%>" alt="">
            <!-- <span class="card-title"><%=games[i].name%></span> -->
          </div>
          <div class="card-content">
            <div class="c-text">
              <p><%=games[i].name%></p>
              <p><%=games[i].year%></p>
            </div>
          </div>
          <div class="card-action">
            <a href="/app/<%=games[i].id%>">More Info</a>
            <a href="/app/<%=games[i].id%>/edit">Edit</a>
            <form action="/app/<%=games[i].id%>?_method=DELETE" method="POST">
              <input type="submit" name="" value="Delete"/>
            </form>
          </div>
        </div>
      </div>

    <% } %>
    </div>
  </body>
</html>
